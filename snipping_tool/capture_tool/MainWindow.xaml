<Window x:Class="capture_tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capture_tool"
        mc:Ignorable="d"
        Title="캡처 도구" Height="450" Width="800" Background="AliceBlue" WindowStyle="None" 
        ResizeMode="CanMinimize" LocationChanged="Window_LocationChanged" 
        StateChanged="Window_StateChanged"
        AllowsTransparency="True"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Rectangle MouseLeftButtonDown="Rectangle_MouseDown"
                       Fill="BlueViolet">

            </Rectangle>

            <DockPanel HorizontalAlignment="Right" Height="30" VerticalAlignment="Top">
                <Button x:Name="ToMiniButton" Width="35" Click="ToMiniButton_Click" Margin="0,10,30,-9">
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="miniBtn" Source="minimizewindowapplication.ico"
                               Stretch="Fill" RenderTransformOrigin="-2.207,0.172" />
                    </StackPanel>
                </Button>
            </DockPanel>



        </Grid>

        <Grid Grid.Row="1">
            

        </Grid>


    </Grid>
</Window>
