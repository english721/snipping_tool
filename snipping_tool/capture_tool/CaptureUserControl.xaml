<UserControl x:Class="capture_tool.ScreenCapture.CaptureUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:capture_tool.ScreenCapture"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                  CanContentScroll="True" MaxHeight="400" MaxWidth="500">
        <Grid Background="White" Width="800" Height="450">
            <Image x:Name="ImgCapture" Width="Auto" Height="Auto"></Image>
        </Grid>
    </ScrollViewer>
    
</UserControl>
